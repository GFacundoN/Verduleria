<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.verduleria.app_verduleria.controllers.MainController"
            stylesheets="@main.css">

    <!-- Top bar -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="12">
            <padding>
                <Insets top="16" right="20" bottom="16" left="20"/>
            </padding>
            <ImageView fitHeight="36" fitWidth="36" pickOnBounds="true" preserveRatio="true"
                       fx:id="appIcon" />
            <VBox>
                <Label fx:id="titleLabel" styleClass="title">Verdulería</Label>
                <Label fx:id="subtitleLabel" styleClass="subtitle">Sistema de gestión — Bienvenido</Label>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label styleClass="small-info">v1.0 • Demo</Label>
        </HBox>
    </top>

    <!-- Center hero + card -->
    <center>
        <StackPane>
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <VBox alignment="CENTER" spacing="24">

                <!-- Hero -->
                <VBox alignment="CENTER" spacing="8">
                    <Label text="Bienvenido a Verdulería" styleClass="hero-title"/>
                    <Label text="Gestioná Clientes, Productos, Pedidos y Remitos desde aquí" styleClass="hero-sub"/>
                </VBox>

                <!-- Card with buttons -->
                <HBox spacing="24" alignment="CENTER">
                    <Pane styleClass="glass-bg" prefWidth="24"/>

                    <VBox styleClass="card" spacing="16" alignment="CENTER">
                        <padding>
                            <Insets top="24" right="24" bottom="24" left="24"/>
                        </padding>

                        <GridPane hgap="12" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>

                            <!-- Row 0 -->
                            <Button fx:id="clientesBtn" text="Clientes" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                    onAction="#openClientes" styleClass="menu-btn filled"/>

                            <Button fx:id="productosBtn" text="Productos" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                    onAction="#openProductos" styleClass="menu-btn outlined"/>

                            <!-- Row 1 -->
                            <Button fx:id="pedidosBtn" text="Pedidos" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                    onAction="#openPedidos" styleClass="menu-btn filled"/>

                            <Button fx:id="detallePedBtn" text="Detalle Pedidos" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                    onAction="#openDetallePedidos" styleClass="menu-btn outlined"/>

                            <!-- Row 2 -->
                            <Button fx:id="remitoBtn" text="Remito" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                    GridPane.columnSpan="2" onAction="#openRemito" styleClass="menu-btn primary-wide"/>
                        </GridPane>

                        <HBox alignment="CENTER" spacing="8">
                            <Label text="Sugerencia:" style="-fx-font-weight:600;"/>
                            <Label text="Usá los botones para navegar a cada módulo." style="-fx-opacity:0.8;"/>
                        </HBox>
                    </VBox>

                    <Pane styleClass="glass-bg" prefWidth="24"/>
                </HBox>

            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="© Verdulería • Admin" styleClass="small-info"/>
        </HBox>
    </bottom>

</BorderPane>
